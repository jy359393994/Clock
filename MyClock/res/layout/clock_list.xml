<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_list_item"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/main_clock_list_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/main_clock_list_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:textSize="18dp" />
    </LinearLayout>

    <ToggleButton
        android:id="@+id/main_clock_list_togglebtn"
        android:layout_width="50dp"
        android:layout_height="28dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/selector_toggle_btn"
        android:text=""
        android:textOff=""
        android:textOn="" />

    <ImageView
        android:id="@+id/main_clock_list_del_btn"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:scaleType="fitCenter"
        android:layout_alignParentRight="true"
        android:src="@drawable/del_bg"
        android:visibility="gone" />

</RelativeLayout>
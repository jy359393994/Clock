<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
        <RelativeLayout
        android:id="@+id/title_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/tips_bg_color"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/layout_music_clock_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onBack"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/btn_music_clock_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20px"
                android:clickable="false"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:src="@drawable/selector_btn_back_bg" />
        </LinearLayout>

        <TextView
            android:id="@+id/music_clock_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@id/layout_music_clock_back"
            android:text="选择铃声"
            android:textColor="@android:color/white"
            android:textSize="20dp" />
    </RelativeLayout>
    
    <ListView 
        android:id="@+id/select_music_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
   
        
        />

</LinearLayout>
